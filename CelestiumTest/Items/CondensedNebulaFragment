    using Terraria;
    using Terraria.ID;
    using Terraria.ModLoader;
    
    namespace CelestiumArmy.Items
    {
    	public class CondensedNebulaFragment : ModItem
    	{
		public override void SetStaticDefaults()
		{
		    DisplayName.SetDefault("Condensed Nebula Fragment");
		    Tooltip.SetDefault("'Condensed Nebula Fragments'");
		}
    		public override void SetDefaults()
    		{
            	    item.width = 18;
            	    item.height = 18;
            	    item.height = 20;
        	    item.maxStack = 999;
        	    item.value = 100;
        	    item.rare = 5;
		}
	
	public override void  AddRecipes()
    		{
    			ModRecipe recipe = new ModRecipe(mod);
    			recipe.AddIngredient(ItemID.FragmentNebula, 20);
    			recipe.AddTile(TileID.LunarCraftingStation);
    			recipe.SetResult(this, 1);
    			recipe.AddRecipe();
		}

	}
 }
